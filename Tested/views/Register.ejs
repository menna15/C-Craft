<%- include("layouts/header") %>

        <div class="Reg-container">
            <div class="reg">
                <form class="form" autocomplete="off">
                    <h2>Sign Up</h2>
                    <div class="username-div">
                        <input id="username" type="text" name="username"  autocomplete="off"><br>
                        <label for="username" class="label-name">
                            <span class="span-name">User Name</span>
                        </label><br>
                    </div>
                    <div class="email">
                        <input id="email" type="email" name="email"autocomplete="false" autocomplete="off"><br>
                        <label for="email" class="label_email">
                            <span class="span_email">Email</span>
                        </label><br>
                    </div>
                    <div class="password">
                        <input id="password" type="password" name="password"><br>
                        <label for="password" class="label_password">
                            <span class="span_password">Password</span>
                        </label><br>
                    </div>
                    <div class="conf-password">
                        <input id="confirm_password" type="password" name="confirm_password"><br>
                        <label for="confpass" class="label_confpass">
                            <span class="span_confpass">Confirm Password</span>
                        </label><br>
                    </div>
                        <select id="genderList" onchange="toggle_gender()">
                            <option>Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select><br>
                    <button type="submit">Sign Up </button><br>
                    <small>Arleady have an account?
                    <a href="login">Log In</a>
                </small>
                </form>
            </div>
        </div>
<%- include("layouts/footer") %>
