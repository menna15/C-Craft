<%- include("layouts/header") %>

<div class="main_container">
  <div class="card">
    <% if(message.length >0){ %>
        <div id="alerty" class="alert alert-success">
  
       <button id="msg"><%= message %></button> 
        <button id='close' onclick='this.parentNode.parentNode.removeChild(this.parentNode); return false;'>x</button>
    </div><br>
  <% } %>
  <% if (user.image) { %>
            <img class="card-img-left" src="/images/instructors/<%= user.image %>" style="height:70px;width:70px;border-radius:50%">
            <% } else { %>
            <img class="card-img-left" src="/images/<%= user.gender %>.png" style="height:70px;width:70px;border-radius:50%" >
            <% } %>
            <div class="card-body">
                <h2 class="card-title">Hi <%= user.username %> !</h2>
                <ul>
                    <li class="card-text">
                        <p><%= user.bio %></p>
                    </li>
                    <% if (user.Courses.length === 0) { %>
                    <li class="card-text"><b>Courses:</b> You are not enrolled in any courses :(</li>
                    <% } else if (user.Courses.length === 1) { %>
                    <li class="card-text"><b>Courses:</b> <%= user.Courses[0].Name %></li>
                    <% } else { %>
                    <li class="card-text"><big><b>Courses:</b></big><br>
                        <ul>
                            <% user.Courses.forEach(course => { %>
                            <li class="card-text"><%= course.Name %></li>
                            <% }); %>
                        </ul>
                    </li>
                    <% } %>
                    <br>
            <a href="/user-profile/'+ user.username/edit-profile" class="btn btn-primary">Edit</a>
                </ul>
            </div>
     
  </div>
</div>
            

<%- include("layouts/footer") %>


