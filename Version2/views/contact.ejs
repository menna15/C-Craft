<%- include("layouts/header") %>

<div class="cont-container">
  <div class="cont">
    <h2>Contact Us</h2>
    <!-- <%- messages('partials/messages', locals) %> -->
    <% if(message.length >0){ %>
      <div id="alerty" class="alert alert-success">

     <button id="msg"><%= message %></button> 
      <button id='close' onclick='this.parentNode.parentNode.removeChild(this.parentNode); return false;'>x</button>
  </div><br>
<% } %>
    <form class="contact_form" action="/contact" method="POST">
        
        <input name="username"type="text" id="N"placeholder="Your Name" value="" required ><br><br>
        <input name="email"type="text" id="Email"placeholder="Email" value=""required> <br><br>
        <input name="subject" type="text" id="Sub" placeholder="Subject"value=""required> <br><br>
        <textarea name="message" id="message" rows="9" cols="32" placeholder="Please leave your message here." required></textarea> <br><br>
        <button type="submit">Submit</button> <br>
    </form>
    
  </div>
</div>
 <%- include("layouts/footer") %>
